{
  "name": "@pdb/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop editor for Process Diagram Builder (Electron + React)",
  "author": "Process Diagram Builder",
  "type": "module",
  "main": "dist-electron/main/main.cjs",
  "scripts": {
    "dev": "npm-run-all -p dev:renderer dev:preload dev:main dev:electron",
    "dev:renderer": "vite --port=5174 --strictPort",
    "dev:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outdir=dist-electron/main --sourcemap --watch --log-level=info --out-extension:.js=.cjs",
    "dev:preload": "esbuild electron/preload.ts --bundle --platform=node --format=cjs --external:electron --outdir=dist-electron/preload --sourcemap --watch --log-level=info --out-extension:.js=.cjs",
    "dev:electron": "wait-on tcp:5174 && nodemon -V -e cjs -w dist-electron/main/main.cjs -x \"cross-env VITE_DEV_SERVER_URL=http://localhost:5174 npx electron dist-electron/main/main.cjs\"",
    "build": "vite build",
    "build:electron": "npm-run-all -s build:main build:preload",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outdir=dist-electron/main --log-level=info --out-extension:.js=.cjs",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --format=cjs --external:electron --outdir=dist-electron/preload --log-level=info --out-extension:.js=.cjs",
    "pack:win:msi": "npm run build && npm run build:electron && electron-builder --win msi",
    "preview": "vite preview"
  },
  "dependencies": {
    "@pdb/core": "file:../../packages/core",
    "bpmn-js": "13.2.0",
    "gsap": "3.12.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/node": "22.7.8",
    "@types/react": "18.3.8",
    "@types/react-dom": "18.3.0",
    "concurrently": "9.1.2",
    "cross-env": "7.0.3",
    "electron": "31.4.0",
    "esbuild": "0.24.0",
    "electron-builder": "24.13.3",
    "nodemon": "3.1.7",
    "npm-run-all": "4.1.5",
    "typescript": "5.6.3",
    "vite": "5.4.10",
    "vite-plugin-electron": "0.28.8",
    "wait-on": "8.0.0"
  }
  ,
  "build": {
    "appId": "ai.factory.process.diagram.builder",
    "productName": "Process Diagram Builder",
    "files": [
      "dist/**",
      "dist-electron/**",
      "index.html"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "executableName": "process-diagram-builder",
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ]
    }
  }
}
